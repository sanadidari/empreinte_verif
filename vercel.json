{
  "version": 2,

  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    {
      "source": "/install",
      "destination": "/static/install.html"
    },
    {
      "source": "/setup",
      "destination": "/static/setup.html"
    },
    {
      "source": "/install.html",
      "destination": "/static/install.html"
    },
    {
      "source": "/setup.html",
      "destination": "/static/setup.html"
    }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/install/",
      "destination": "/install",
      "permanent": false
    }
  ]
}
